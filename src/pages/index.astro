---
import MainLayout from "~/layouts/MainLayout.astro";

import { Separator } from "~/components/ui";

import About from "~/components/About.tsx";
import Projects from "~/components/Projects.tsx";
import Stacks from "~/components/Stacks.tsx";
import Socials from "~/components/Socials.tsx";
import DevelopedBy from "~/components/DevelopedBy.tsx";
import SectionContainer from "~/components/SectionContainer.astro";
import Briefcase from "~/components/icons/Briefcase.astro"
import Experience from "~/components/Experience.astro";
import CodeIcon from "~/components/icons/Code.astro"
---

<MainLayout
  title="Jesús Andrés Monge Loor 🧑‍💻 | Desarrollador Web, Trader, Inversionista, Emprendedor Digital"
  description="Soy un developer con experiencia en el desarrollo de aplicaciones web y móviles. Me apasiona la tecnología, la programación, y disfruto creando soluciones digitales que ayuden a las personas a mejorar su calidad de vida."
  showHeader
>
  <main class="container p-3 mx-auto max-w-screen-sm min-h-dvh py-16 md:py-32">
    <About client:idle />

    <Separator className="my-8" />

    <div class="space-y-24">


    <SectionContainer id="experiencia">
      <h2
        class="flex items-center mb-6 lg:text-3xl text-xl font-semibold gap-x-3 text-white"
      >
        <Briefcase class="size-8" />
        Experiencia laboral
      </h2>
      <Experience />
    </SectionContainer>


    <SectionContainer id="proyectos">
      <h2
        class="flex items-center mb-6 lg:text-3xl text-xl font-semibold gap-x-3 text-white"
      >
        <CodeIcon class="size-7" />
        Proyectos
      </h2>
    <Projects client:idle />
  </SectionContainer>


    <div class="h-10"></div>

    <Stacks client:idle />

    <div class="h-10"></div>

    <Socials client:idle />

    </div>

    <Separator className="my-8" />

    <DevelopedBy />
  </main>
</MainLayout>

<style>
  /* boxes pattern */
  body {
    z-index: 1;
    position: relative;
    background-color: rgb(var(--neutral-1));
    background-image: linear-gradient(rgb(var(--neutral-2)) 1px, transparent 1px),
      linear-gradient(to right, rgb(var(--neutral-2)) 1px, rgb(var(--neutral-1)) 1px);
    background-size: 40px 40px;
  }

  body::after {
    z-index: -1;
    content: "";
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    background-image: linear-gradient(to bottom, transparent, rgb(var(--neutral-1)));
  }
</style>
