---
import HTML from "~/components/HTML.astro";
import Header from "~/components/Header.astro";

type Props = {
  title?: string;
  description?: string;
  showHeader?: boolean;
};

const { title, description, showHeader } = Astro.props;
---

<HTML {title} {description}>
  <Fragment slot="body">
    {showHeader && <Header />}
    <slot />
  </Fragment>
</HTML>
